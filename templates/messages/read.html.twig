{% extends 'base.html.twig' %}
{% block title %}Messagerie
{% endblock %}
{% block body %}
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<div class="container-fluid">
			<a class="navbar-brand" href="/welcome">Accueil</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="{{ path("received") }}">Messages Reçus</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path("sent") }}">Messages Envoyés</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{ path("send") }}">Nouveau Message</a>
					</li>
				</ul>
			</div>
		</div>
	</nav>
	<section class="container">
		<div class="row">
			<div class="col-12">
				<h1>Messagerie</h1>
				<h2>{{ message.title }}</h2>
				<p>Message de
					{{ message.sender.email }}</p>
				<p>Message envoyé à
					{{message.recipient.email}}</p>
				<p>Le
					{{ message.createdAt|date }}</p>
				<div class="container bg-light rounded mb-2 p-5">{{ message.message }}</div>
				<a href="{{path("reply", {'to': message.id})}}" class="btn btn-primary float-end">Répondre</a>
			</div>
		</div>
	</section>
{% endblock %}
